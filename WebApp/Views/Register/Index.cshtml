@model UserRegisterViewModel
@{
    ViewData["Title"] = "Sign up";
}

<section class="__registersection">
    <div class="container">
        <div class="__contactbox">
            <span>Please Register Your new Account</span>
            <form id='registerForm' method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="__input">
                    <div class="userdetails">
                        <label asp-for="FirstName">First Name *</label>
                        <input asp-for="FirstName" />
                        <small class="text-danger"><span asp-validation-for="FirstName"></span></small>
                    </div>
                    <div class="userdetails">
                        <label asp-for="LastName">Last Name *</label>
                        <input asp-for="LastName" />
                        <small class="text-danger"><span asp-validation-for="LastName"></span></small>
                    </div>
                </div>

                <div class="userdetails">
                    <label asp-for="StreetName">Street Name *</label>
                    <input asp-for="StreetName" />
                    <small class="text-danger"><span asp-validation-for="StreetName"></span></small>
                </div>

                <div class="__input">
                    <div class="userdetails">
                        <label asp-for="PostalCode">Postal Code *</label>
                        <input asp-for="PostalCode" />
                        <small class="text-danger"><span asp-validation-for="PostalCode"></span></small>
                    </div>
                    <div class="userdetails">
                        <label asp-for="City">City *</label>
                        <input asp-for="City" />
                        <small class="text-danger"><span asp-validation-for="City"></span></small>
                    </div>
                </div>

                <div class="__input">
                    <div class="userdetails">
                        <label asp-for="Mobile">Mobile (Optional)</label>
                        <input asp-for="Mobile" />
                    </div>
                    <div class="userdetails">
                        <label asp-for="CompanyName">Company (Optional)</label>
                        <input asp-for="CompanyName" />
                    </div>
                </div>

                <div class="userdetails">
                    <label asp-for="Email">Email *</label>
                    <input asp-for="Email" />
                    <small class="text-danger"><span asp-validation-for="Email"></span></small>
                </div>

                <div class="userdetails">
                    <label asp-for="Password">Password *</label>
                    <input asp-for="Password" />
                    <small class="text-danger"><span asp-validation-for="Password"></span></small>
                </div>

                <div class="userdetails">
                    <label asp-for="ConfirmPassword">Confirm Password *</label>
                    <input asp-for="ConfirmPassword" />
                    <small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
                </div>

                <div class="userdetails">
                    <label asp-for="ProfilePicture">Upload Profile Image (optional)</label>
                    <input asp-for="ProfilePicture" />
                </div>

                <div class="rememberme">
                    <input asp-for="TermsAndAgreements" type="checkbox" />
                    <label asp-for="TermsAndAgreements">I have read and accepts the terms and agreements</label>
                </div>

                <div>
                    <button class="button-red" type="submit"><span>Submit</span></button>
                </div>
            </form>
        </div>
    </div>
</section>