@model ContactFormViewModel
@{
    ViewData["Title"] = "Contact us";
}

<partial name="/Views/Partials/_Breadcrumb.cshtml" />


<section class="contactus">
    <div class="container">
        <div class="__contactbox">
            <span>Write something</span>
            <form id='commentForm' method="post" class="was-validated">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="user">
                    <div class="username">
                        <label asp-for="Name">Your Name *</label>
                        <input asp-for="Name" class="form-control is-valid" required />
                        <small class="text-danger"><span asp-validation-for="Name"></span></small>
                        <div class="invalid-feedback">You must enter a first name.</div>
                    </div>
                    <div class="useremail">
                        <label asp-for="Email">Your Email *</label>
                        <input asp-for="Email" class="form-control is-valid" required />
                        <small class="text-danger"><span asp-validation-for="Email"></span></small>
                        <div class="invalid-feedback">You must enter an e-mail address.</div>
                    </div>
                </div>
                <div class="user">
                    <div class="phonenumber">
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" />
                    </div>
                    <div class="company">
                        <label asp-for="Company">Company (optional)</label>
                        <input asp-for="Company" />
                    </div>
                </div>
                <div class="commentbox">
                    <label asp-for="Comment">Something write *</label>
                    <textarea asp-for="Comment" class="form-control is-valid" required></textarea>
                    <small class="text-danger"><span asp-validation-for="Comment"></span></small>
                    <div class="invalid-feedback">You must enter a comment.</div>
                </div>
                <div class="rememberme">
                    <input asp-for="RememberMe" type="checkbox" />
                    <label asp-for="RememberMe">Save my name, email, and website in this browser for the next time I comment.</label>
                </div>
                <div>
                    <button class="button-red" type="submit"><span>Submit</span></button>
                </div>
            </form>
        </div>
    </div>

    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d2038.6562293124794!2d15.204771716778563!3d59.27189222266778!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sse!4v1679558132597!5m2!1sen!2sse" class='map' allowFullScreen height="825" loading="lazy" referrerPolicy="no-referrer-when-downgrade"></iframe>

</section>


<script>
    $(document).ready(function () {
        $("form.needs-validation").validate();
    });
</script>